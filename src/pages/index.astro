---
import CitiesLayout from "@layouts/CitiesLayout.astro";
import Card from "@components/Card.astro";
import cities from "@data/cities";
---

<CitiesLayout>
  <div class="flex flex-wrap @container">
    {
      cities.map(({ id, name, src }) => (
        <div class="@container w-full @md:w-1/2 @xl:w-1/3 @3xl:w-1/4 p-1" style={{ viewTransitionName: `city-${id}` }}>
          <a href={`/cities/${id}`}>
            <Card src={src} alt={name} active>
              <h1 class="text-md @lg:text-3xl font-bold">{name}</h1>
            </Card>
          </a>
        </div>
      ))
    }
  </div>
</CitiesLayout>
